<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/containerMoviesFragment">
    <fragment
        android:id="@+id/containerMoviesFragment"
        android:name="com.zlasher.rottenmovies.ui.ContainerMoviesFragment"
        android:label="fragment_container_movies"
        tools:layout="@layout/fragment_container_movies">
        <action
            android:id="@+id/action_containerMoviesFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/nowPlayingMoviesFragment"
        android:name="com.zlasher.rottenmovies.ui.NowPlayingMoviesFragment"
        android:label="fragment_now_playing_movies"
        tools:layout="@layout/fragment_now_playing_movies">
        <action
            android:id="@+id/action_nowPlayingMoviesFragment_to_containerMoviesFragment"
            app:destination="@id/containerMoviesFragment" />
    </fragment>
    <fragment
        android:id="@+id/popularMoviesFragment"
        android:name="com.zlasher.rottenmovies.ui.PopularMoviesFragment"
        android:label="fragment_popular_movies"
        tools:layout="@layout/fragment_popular_movies">
        <action
            android:id="@+id/action_popularMoviesFragment_to_containerMoviesFragment"
            app:destination="@id/containerMoviesFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.zlasher.rottenmovies.ui.DetailMovieFragment"
        android:label="fragment_detail_movie"
        tools:layout="@layout/fragment_detail_movie">
        <argument
            android:name="movie"
            app:argType="com.zlasher.rottenmovies.detail.MovieDetail" />
    </fragment>
</navigation>